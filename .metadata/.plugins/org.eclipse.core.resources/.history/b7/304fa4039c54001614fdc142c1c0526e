package com.gky.thread;

public class Customer extends Thread{

	ShareData data;
	
	public Customer(ShareData data) {
		this.data = data;
	}


	@Override
	public void run() {
		// TODO Auto-generated method stub
		char ch = 0;
		do{
			try {
				Thread.sleep(1);
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
			ch = data.getData();
			System.out.println(ch);
		}while(ch != 'Z');
	}
	
}
